<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rlAllUsers"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserProfileIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        android:contentDescription="@android:string/cancel"/>

    <TextView
        android:id="@+id/txtCreateGroupUserName"
        android:layout_toEndOf="@+id/imgUserProfileIcon"
        android:layout_toStartOf="@+id/imgSelectMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgSelectMember"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_selected"
        android:scaleType="fitXY"/>

</RelativeLayout>