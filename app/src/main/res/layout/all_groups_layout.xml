<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgGroupIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:contentDescription="@android:string/cancel"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/llGroupLayout"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imgShowUnseenMsg"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/txtGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/txtLastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgShowUnseenMsg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/receiver_msg_background"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#808587"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>